<h1 align='center'>All categories</h1>

<div align='center'>
    <% @categories.each do |category| %>
        <ul class='listing'>
            <div class='row'>
                <div class='well col-md-4 col-md-offset-4'>
                    <li class='article-title'>
                        <%= link_to "#{category.name}", categories_path(category) %>
                    </li>
                </div>
            </div>
        </ul>
    <% end %>
</div>